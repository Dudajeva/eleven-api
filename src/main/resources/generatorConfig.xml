<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!-- 关键：把 catalog 视为当前库（MySQL 用这个来限定 DB） -->
        <property name="nullCatalogMeansCurrent" value="true"/>
        <property name="autoDelimitKeywords" value="true"/>

        <plugin type="org.mybatis.generator.plugins.MapperAnnotationPlugin"/>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://rm-2ze5qu49xtfkxeo4mvo.mysql.rds.aliyuncs.com:3306/eleven?useUnicode=true&amp;useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=Asia/Shanghai"
                        userId="root" password="AAaa1234"/>

        <javaModelGenerator targetPackage="org.adzc.elevenapi.domain" targetProject="src/main/java"/>
        <sqlMapGenerator   targetPackage="mappers"                   targetProject="src/main/resources"/>
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="org.adzc.elevenapi.mapper"
                             targetProject="src/main/java"/>

        <!-- 不写 schema/catalog，只写表名；依赖“当前库=eleven” mvn clean mybatis-generator:generate -Dmybatis.generator.overwrite=true -->
        <table  tableName="feed_post" domainObjectName="FeedPost">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
        </table>
        <table  tableName="feed_like" domainObjectName="FeedLike">
        </table>
    </context>
</generatorConfiguration>
